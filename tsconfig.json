{
    "files": [ "index.js" ],
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "declarationMap": true,
        "types": ["node"]
    },
    "typeAcquisition": {
        "enable": true
    },
    "$schema": "https://json.schemastore.org/tsconfig"
}